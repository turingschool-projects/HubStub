<div class="row">
  <div class="col-md-3">
    <h3>Items</h3>
  </div>
  <div class="col-md-3 pull-right righter top-button">
    <%= link_to "New Item", new_admin_item_path, class: "btn btn-success" %>
  </div>
</div>

<table class="table table-hover manage-item-list">
  <thead>
    <th>Image</th>
    <th>Name</th>
    <th>Description</th>
    <th>Price</th>
    <th>Category</th>
    <th>Active?</th>
    <th></th>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= image_tag item.image.image_url, class: "manage-item-img" %></td>
        <td><%= item.title %></td>
        <td><%= item.description %></td>
        <td><%= item.dollar_amount %></td>
        <td><%= item.category.name %></td>
        <td><%= item.status %></td>
        <td><%= link_to "Edit", edit_admin_item_path(item), class: "btn btn-default" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
